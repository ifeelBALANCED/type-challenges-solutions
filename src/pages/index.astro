---
import '../app/styles/globals.css';

import Layout from '@/app/layouts/layout.astro';
import {Avatar} from "@/shared/ui/avatar";
import {buttonVariants} from "@/shared/ui/button";
import {Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle} from "@/shared/ui/card";
import Footer from '@/widgets/footer.astro';
---

<Layout title="Welcome to Astro x Shadcn Starter">
    <main class="container mx-auto max-w-4xl px-4 py-16">
        <h1 class="text-black-50 mb-8 text-center text-5xl font-extrabold">
            Astro x Shadcn <span class="mt-2 block text-3xl font-normal">Starter Template</span>
        </h1>

        <Card className="mb-12 shadow-lg">
            <CardHeader>
                <CardTitle>Getting Started</CardTitle>
                <CardDescription>Your new project is ready to go!</CardDescription>
            </CardHeader>
            <CardContent>
                <p class="mb-4">This starter template includes:</p>
                <ul class="grid grid-cols-2 gap-4">
                    <li>ðŸš€ Astro</li>
                    <li>ðŸŽ¨ Shadcn UI</li>
                    <li>ðŸ“¦ Tailwind CSS</li>
                    <li>ðŸ”¥ React</li>
                </ul>
            </CardContent>
            <CardFooter className="flex flex-col justify-center space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
                <a href="https://ui.shadcn.com/"
                   class={`bg-black-100 hover:bg-slate inline-block rounded-lg px-4 py-2 text-lg font-medium text-white transition ${buttonVariants({size: 'lg'})}`}>
                    Explore Shadcn Documentation
                </a>
                <a href="https://astro.build/docs"
                   class={`bg-black-100 hover:bg-slate inline-block rounded-lg px-4 py-2 text-lg font-medium text-white transition ${buttonVariants({size: 'lg'})}`}>
                    Explore Astro Documentation
                </a>
                <a href="https://github.com/dansholds/astro-shadcn-starter"
                   class={`bg-black-100 hover:bg-slate inline-block rounded-lg px-4 py-2 text-lg font-medium text-white transition ${buttonVariants({size: 'lg'})}`}>
                    View GitHub Repository
                </a>
            </CardFooter>
        </Card>

        <div class="grid gap-6 sm:grid-cols-2">
            <Card className="shadow-md transition-shadow hover:shadow-xl">
                <CardHeader>
                    <CardTitle>
                        <Avatar client:load src="https://github.com/withastro.png" alt="Astro"
                                fallbackText="Astro"/>
                        Astro
                    </CardTitle>
                </CardHeader>
                <CardContent>
                    Build faster websites with less client-side JavaScript.
                </CardContent>
            </Card>
            <Card className="shadow-md transition-shadow hover:shadow-xl">
                <CardHeader>
                    <CardTitle>
                        <Avatar client:load src="https://github.com/shadcn.png" alt="Shadcn"
                                fallbackText="Shadcn"/>
                        Shadcn UI
                    </CardTitle>
                </CardHeader>
                <CardContent>
                    Beautifully designed components built with Radix UI and Tailwind CSS.
                </CardContent>
            </Card>
        </div>
    </main>
    <Footer/>
</Layout>